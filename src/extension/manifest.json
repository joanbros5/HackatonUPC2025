{
  "manifest_version": 3,
  "name": "Screenshot Capture",
  "version": "1.0",
  "description": "Captures screenshots and displays them in the popup",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
} 